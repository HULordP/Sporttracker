<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/DefaultText</item>
        <item name="android:colorPrimaryDark">@color/blue_darker</item>
    </style>

    <style name="DefaultText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <!-- Attributes of RobotoTextView -->
        <item name="fontFamily">roboto</item>
        <item name="textWeight">normal</item>
        <item name="textStyle">normal</item>
    </style>

    <style name="DateText">
        <item name="fontFamily">roboto</item>
        <item name="textWeight">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue_darker</item>
    </style>

    <style name="MapText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="fontFamily">roboto</item>
        <item name="android:textViewStyle">@style/DefaultText</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_transparent</item>
    </style>

    <style name="CurrentDataText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="fontFamily">roboto</item>
        <item name="textWeight">ultra_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/tile_bg</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="TrackingText" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="fontFamily">roboto</item>
        <item name="textWeight">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/tile_bg</item>
        <item name="android:layout_margin">8dp</item>
    </style>


    <style name="MapBigButton" parent="Widget.AppCompat.Button">
        <!-- Attributes of RobotoButton -->
        <item name="fontFamily">roboto</item>
        <item name="textWeight">ultra_bold</item>
        <item name="android:textColor">@color/cian</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
    </style>

</resources>
